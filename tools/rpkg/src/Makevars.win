OPTFLAG=
# figure out if we are on 32 bit, in which case we need to use -Og to not run out of memory 
ifeq ($(R_ARCH),/i386)
	OPTFLAG=-O1
endif

PKG_CXXFLAGS = -I. -DDUCKDB_DISABLE_PRINT
OBJECTS=duckdbr.o parquet-extension.o duckdb.o

.PHONY: all duckdb.o

all: $(SHLIB)
$(SHLIB): duckdb.o

duckdb.o: duckdb.cpp
	$(CXX) $(ALL_CPPFLAGS) $(ALL_CXXFLAGS) $(OPTFLAG) -c duckdb.cpp -o $@
